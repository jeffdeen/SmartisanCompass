<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="@drawable/t_bg">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:text="指南针"
            android:textColor="#666666"
            android:textSize="20sp"
            android:layout_marginBottom="2dp"
            android:gravity="center"/>
        <Button
            android:id="@+id/button"
            android:layout_width="65.5dp"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="6dp"
            android:layout_marginTop="2dp"
            android:text="关于"
            android:textColor="#777777"
            android:textSize="14sp"
            android:background="@drawable/aboutbutton"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/compass"
        android:layout_below="@+id/direction"
        android:layout_width="332dp"
        android:layout_height="332dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/blank_clock3">
        <com.example.jeff.compass.compassView
            android:id="@+id/degree"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:src="@drawable/degree"
            android:layout_centerInParent="true"
            android:scaleType="fitXY"/>
    </RelativeLayout>

    <ToggleButton
        android:id="@+id/lightButton"
        android:layout_below="@+id/title"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textOff=" "
        android:textOn=" "
        android:background="@drawable/light_off"/>
    <LinearLayout
        android:id="@+id/direction"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_below="@+id/title"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/compassDirection"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="25sp"
            android:gravity="end"
            android:layout_weight="1.8"
            android:textColor="#A52A2A"/>
        <TextView
            android:id="@+id/compassDegree"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="25sp"
            android:layout_weight="1"
            android:gravity="start"
            android:textColor="#A52A2A"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/locationLayout"
        android:layout_below="@+id/compass"
        >

        <TextView
            android:id="@+id/longitudeText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="20sp"
            android:gravity="end|center_vertical"
            android:layout_weight="1"
            android:textColor="#A52A2A"/>

        <TextView
            android:id="@+id/latitudeText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="20sp"
            android:layout_weight="1"
            android:gravity="start|center_vertical"
            android:textColor="#A52A2A"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/altitude"
        android:layout_below="@+id/locationLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="#A52A2A"
        />
    <!--<TextView-->
        <!--android:id="@+id/address"-->
        <!--android:layout_alignParentBottom="true"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:textColor="#666666"-->
        <!--android:textSize="15sp"/>-->



</RelativeLayout>
